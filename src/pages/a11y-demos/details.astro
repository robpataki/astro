<style lang="scss">
  .demo {
    display: flex;
    flex-direction: column;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    justify-content: center;
    align-items: center;
    padding: 1rem;

    details {
      width: 20rem;
    }

    h1 {
      align-self: center;
    }
  }

  ul {
    li {
      margin-bottom: 0.5rem;
    }
  }

  details {
    margin-bottom: 0.5rem;
  }
</style>