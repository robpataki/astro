---
import PageLayout from '@layouts/PageLayout.astro';
import DemoHeader from '@components/DemoHeader.astro';

const modules = import.meta.glob('/src/pages/demos/the-book-of-shaders/*.astro', { eager: false });
const title = 'The book of shaders';
---

<PageLayout title={title} description="The book of shaders">
  <DemoHeader title={title} isScrolling />
  <main>
    <div class="demo-list-index">
      {
        modules ? (
          <div class="demo-list-container">
            <h1>{title}</h1>
            <ul class="demo-list">
              {Object.keys(modules).map((module) => {
                const slug = module.substring(module.indexOf('/src/pages/demos/the-book-of-shaders/') + 37, module.indexOf('.astro'));

                return (
                  <li>
                    <a href={`the-book-of-shaders/${slug}`}>{slug}</a>
                  </li>
                );
              })}
            </ul>
          </div>
        ) : null
      }
    </div>
  </main>
</PageLayout>
